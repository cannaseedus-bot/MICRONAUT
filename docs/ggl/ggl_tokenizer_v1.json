{
  "@type": "ggl.tokenizer.v1",
  "@id": "xjson://tokenizer/ggl/v1",
  "normalization": {
    "unicode_nfkc": true,
    "strip_trailing_ws": true,
    "newline": "\n",
    "tab_width": 2
  },
  "special_tokens": [
    "GGL.begin",
    "GGL.end",
    "<EOS>",
    "<PAD>",
    "<UNK>"
  ],
  "fixed_tokens": [
    "node",
    "graph",
    "edge",
    "emit",
    "let",
    "set",
    "if",
    "else",
    "for",
    "return",
    "true",
    "false",
    "null",
    "{",
    "}",
    "(",
    ")",
    "[",
    "]",
    ";",
    ":",
    ",",
    ".",
    "=",
    "->",
    "+",
    "-",
    "*",
    "/",
    "%",
    "==",
    "!=",
    "<",
    "<=",
    ">",
    ">=",
    "\"",
    "'",
    "@",
    "#"
  ],
  "token_rules": [
    { "name": "whitespace", "pattern": "[ \\t\\r]+", "emit": false },
    { "name": "newline", "pattern": "\\n", "emit": true, "token": "\\n" },
    { "name": "comment_line", "pattern": "//[^\\n]*", "emit": false },
    { "name": "comment_block", "pattern": "/\\*[\\s\\S]*?\\*/", "emit": false },
    { "name": "string_dq", "pattern": "\"([^\"\\\\]|\\\\.)*\"", "emit": true, "type": "STRING" },
    { "name": "string_sq", "pattern": "'([^'\\\\]|\\\\.)*'", "emit": true, "type": "STRING" },
    { "name": "number", "pattern": "-?(0|[1-9][0-9]*)(\\.[0-9]+)?", "emit": true, "type": "NUMBER" },
    { "name": "ident", "pattern": "[A-Za-z_][A-Za-z0-9_]*", "emit": true, "type": "IDENT" },
    {
      "name": "operator_or_punct",
      "pattern": "->|==|!=|<=|>=|\\{|\\}|\\(|\\)|\\[|\\]|;|:|,|\\.|=|\\+|-|\\*|/|%|<|>",
      "emit": true
    }
  ],
  "unknown_token": "<UNK>"
}
